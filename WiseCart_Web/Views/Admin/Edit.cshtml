@model WiseCart_Web.Models.Product

@{
    ViewData["Title"] = "Ürün Düzenle";
}

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0"><i class="fa-solid fa-pencil"></i> Ürün Düzenle</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                
                <div class="mb-3">
                    <label class="form-label fw-bold">Ürün Adı</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Fiyat (TL)</label>
                        <input asp-for="CurrentPrice" type="number" step="0.01" class="form-control" required />
                        <span asp-validation-for="CurrentPrice" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Model Kodu</label>
                        <input asp-for="Model" class="form-control" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Kategori</label>
                        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Marka</label>
                        <select asp-for="BrandId" class="form-select" asp-items="ViewBag.BrandId"></select>
                        <span asp-validation-for="BrandId" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Yorum Sayısı</label>
                    <input asp-for="ReviewCount" type="number" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Resim URL</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="https://..." />
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="mt-2">
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail" style="max-width: 200px;" onerror="this.style.display='none'">
                        </div>
                    }
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Ürün URL</label>
                    <input asp-for="Url" class="form-control" placeholder="https://..." />
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                    <button type="submit" class="btn btn-warning px-5">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

