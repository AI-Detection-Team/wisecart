@model IEnumerable<WiseCart_Web.Models.Product>

@{
    ViewData["Title"] = "Yönetim Paneli";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark"><i class="fa-solid fa-user-shield"></i> Yönetim Paneli</h2>
        <a asp-action="Create" class="btn btn-success rounded-pill px-4">
            <i class="fa-solid fa-plus"></i> Yeni Ürün Ekle
        </a>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white p-3 shadow-sm">
                <h5>Toplam Ürün</h5>
                <h2 class="fw-bold">@Model.Count()</h2>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-warning text-dark p-3 shadow-sm">
                <h5>Veritabanı</h5>
                <h2 class="fw-bold">MSSQL</h2>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white p-3 shadow-sm">
                <h5>Kullanıcı</h5>
                <h2 class="fw-bold">Admin</h2>
            </div>
        </div>
    </div>

    <div class="card shadow border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Ürün</th>
                        <th>Kategori</th>
                        <th>Marka</th>
                        <th>Fiyat</th>
                        <th class="text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <img src="@item.ImageUrl" class="rounded border me-3" style="width: 40px; height: 40px; object-fit: contain;">
                                    <div class="text-truncate" style="max-width: 250px;">
                                        <strong>@item.Name</strong>
                                    </div>
                                </div>
                            </td>
                            <td><span class="badge bg-secondary">@item.Category?.Name</span></td>
                            <td>@item.Brand?.Name</td>
                            <td class="text-success fw-bold">@item.CurrentPrice?.ToString("N0") TL</td>
                            <td class="text-end pe-4">
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;"
                                      onsubmit="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="fa-solid fa-trash"></i> Sil
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>