    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Toast Notification Helper Function -->
    <script>
        function showToast(type, title, message) {
            const toast = document.getElementById('toastNotification');
            const toastIcon = document.getElementById('toastIcon');
            const toastTitle = document.getElementById('toastTitle');
            const toastBody = document.getElementById('toastBody');
            
            // Icon ve renk ayarlarÄ±
            let iconClass = '';
            let headerClass = '';
            
            switch(type) {
                case 'error':
                    iconClass = 'fa-circle-exclamation text-danger';
                    headerClass = 'bg-danger text-white';
                    break;
                case 'success':
                    iconClass = 'fa-circle-check text-success';
                    headerClass = 'bg-success text-white';
                    break;
                case 'warning':
                    iconClass = 'fa-triangle-exclamation text-warning';
                    headerClass = 'bg-warning text-dark';
                    break;
                case 'info':
                    iconClass = 'fa-circle-info text-info';
                    headerClass = 'bg-info text-white';
                    break;
                default:
                    iconClass = 'fa-bell text-primary';
                    headerClass = 'bg-primary text-white';
            }
            
            toastIcon.className = `fa-solid ${iconClass} me-2`;
            toastTitle.textContent = title;
            toastBody.textContent = message;
            
            // Header rengini ayarla
            const toastHeader = toast.querySelector('.toast-header');
            toastHeader.className = `toast-header ${headerClass}`;
            
            // Toast'u gÃ¶ster
            const bsToast = new bootstrap.Toast(toast, {
                autohide: true,
                delay: type === 'error' ? 6000 : 4000
            });
            bsToast.show();
        }
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>