@model WiseCart_Web.Models.ViewModels.AnalyticsViewModel
@{
    ViewData["Title"] = "OLAP Küp Analizi - Dashboard";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-primary">
                <i class="fa-solid fa-chart-bar"></i> OLAP Küp Analizi Dashboard
            </h2>
            <p class="text-muted">Veri ambarından küp analizi yaparak derinlemesine analitik raporlar görüntüleyin</p>
        </div>
    </div>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="fa-solid fa-circle-exclamation"></i> @ViewBag.ErrorMessage
        </div>
    }

    <!-- Özet Kartlar -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card border-primary h-100">
                <div class="card-body">
                    <h5 class="card-title text-primary">
                        <i class="fa-solid fa-box"></i> Toplam Ürün
                    </h5>
                    <h2 class="text-primary">@Model.Summary.TotalProducts</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-success h-100">
                <div class="card-body">
                    <h5 class="card-title text-success">
                        <i class="fa-solid fa-folder"></i> Kategoriler
                    </h5>
                    <h2 class="text-success">@Model.Summary.TotalCategories</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-info h-100">
                <div class="card-body">
                    <h5 class="card-title text-info">
                        <i class="fa-solid fa-tag"></i> Markalar
                    </h5>
                    <h2 class="text-info">@Model.Summary.TotalBrands</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-warning h-100">
                <div class="card-body">
                    <h5 class="card-title text-warning">
                        <i class="fa-solid fa-lira-sign"></i> Ortalama Fiyat
                    </h5>
                    <h2 class="text-warning">@Model.Summary.AveragePrice.ToString("N2") ₺</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card border-danger h-100">
                <div class="card-body">
                    <h5 class="card-title text-danger">
                        <i class="fa-solid fa-arrow-up"></i> Fiyat Artışları
                    </h5>
                    <h2 class="text-danger">@Model.Summary.PriceIncreaseCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-success h-100">
                <div class="card-body">
                    <h5 class="card-title text-success">
                        <i class="fa-solid fa-arrow-down"></i> Fiyat Düşüşleri
                    </h5>
                    <h2 class="text-success">@Model.Summary.PriceDecreaseCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-secondary h-100">
                <div class="card-body">
                    <h5 class="card-title text-secondary">
                        <i class="fa-solid fa-database"></i> Toplam Kayıt
                    </h5>
                    <h2 class="text-secondary">@Model.Summary.TotalRecords</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Kategori Analizi Grafiği -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fa-solid fa-chart-pie"></i> Kategori Bazlı Fiyat Analizi</h5>
                </div>
                <div class="card-body">
                    <canvas id="categoryChart" height="100"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Marka Analizi Grafiği -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fa-solid fa-chart-bar"></i> Marka Bazlı Ürün Analizi</h5>
                </div>
                <div class="card-body">
                    <canvas id="brandChart" height="100"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Zaman Serisi Analizi -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fa-solid fa-chart-line"></i> Zaman Serisi Analizi (Aylık)</h5>
                </div>
                <div class="card-body">
                    <canvas id="timeSeriesChart" height="100"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Fiyat Trend Analizi Tablosu -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fa-solid fa-trending-up"></i> En Çok Fiyat Artışı Gösteren Ürünler</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Ürün Adı</th>
                                    <th>Kategori</th>
                                    <th>Güncel Fiyat</th>
                                    <th>Fiyat Değişimi</th>
                                    <th>Yüzde Değişim</th>
                                    <th>Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var trend in Model.PriceTrendAnalyses)
                                {
                                    <tr>
                                        <td>@trend.ProductName</td>
                                        <td>@trend.CategoryName</td>
                                        <td>@trend.CurrentPrice.ToString("N2") ₺</td>
                                        <td class="@(trend.PriceChange >= 0 ? "text-danger" : "text-success")">
                                            @(trend.PriceChange?.ToString("N2") ?? "N/A") ₺
                                        </td>
                                        <td class="@(trend.PriceChangePercent >= 0 ? "text-danger" : "text-success")">
                                            @(trend.PriceChangePercent?.ToString("N2") ?? "N/A") %
                                        </td>
                                        <td>
                                            @if (trend.IsPriceIncrease)
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="fa-solid fa-arrow-up"></i> Artış
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fa-solid fa-arrow-down"></i> Düşüş
                                                </span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Kategori Detay Tablosu -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="fa-solid fa-table"></i> Kategori Detay Analizi</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Kategori</th>
                                    <th>Toplam Fiyat</th>
                                    <th>Ortalama Fiyat</th>
                                    <th>Ürün Sayısı</th>
                                    <th>Ort. Fiyat Değişim %</th>
                                    <th>Fiyat Artış Sayısı</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model.CategoryAnalyses)
                                {
                                    <tr>
                                        <td><strong>@category.CategoryName</strong></td>
                                        <td>@category.TotalPrice.ToString("N2") ₺</td>
                                        <td>@category.AveragePrice.ToString("N2") ₺</td>
                                        <td>@category.ProductCount</td>
                                        <td class="@(category.AveragePriceChangePercent >= 0 ? "text-danger" : "text-success")">
                                            @category.AveragePriceChangePercent.ToString("N2") %
                                        </td>
                                        <td>@category.PriceIncreaseCount</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        // Kategori Analizi Grafiği
        const categoryCtx = document.getElementById('categoryChart').getContext('2d');
        const categoryChart = new Chart(categoryCtx, {
            type: 'pie',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.CategoryAnalyses.Select(c => c.CategoryName))),
                datasets: [{
                    label: 'Toplam Fiyat',
                    data: @Html.Raw(Json.Serialize(Model.CategoryAnalyses.Select(c => c.TotalPrice))),
                    backgroundColor: [
                        'rgba(111, 66, 193, 0.8)',
                        'rgba(40, 167, 69, 0.8)',
                        'rgba(0, 123, 255, 0.8)',
                        'rgba(255, 193, 7, 0.8)',
                        'rgba(220, 53, 69, 0.8)',
                        'rgba(23, 162, 184, 0.8)',
                        'rgba(108, 117, 125, 0.8)'
                    ]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        position: 'right'
                    },
                    title: {
                        display: false
                    }
                }
            }
        });

        // Marka Analizi Grafiği
        const brandCtx = document.getElementById('brandChart').getContext('2d');
        const brandData = @Html.Raw(Json.Serialize(Model.BrandAnalyses.Take(10)));
        const brandChart = new Chart(brandCtx, {
            type: 'bar',
            data: {
                labels: brandData.map(b => b.brandName),
                datasets: [{
                    label: 'Ürün Sayısı',
                    data: brandData.map(b => b.productCount),
                    backgroundColor: 'rgba(0, 123, 255, 0.8)',
                    borderColor: 'rgba(0, 123, 255, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });

        // Zaman Serisi Analizi Grafiği
        const timeSeriesCtx = document.getElementById('timeSeriesChart').getContext('2d');
        const timeSeriesData = @Html.Raw(Json.Serialize(Model.TimeSeriesAnalyses.Take(12).Reverse()));
        const timeSeriesChart = new Chart(timeSeriesCtx, {
            type: 'line',
            data: {
                labels: timeSeriesData.map(t => t.period),
                datasets: [{
                    label: 'Toplam Fiyat',
                    data: timeSeriesData.map(t => t.totalPrice),
                    borderColor: 'rgba(40, 167, 69, 1)',
                    backgroundColor: 'rgba(40, 167, 69, 0.2)',
                    fill: true,
                    tension: 0.4
                }, {
                    label: 'Ortalama Fiyat',
                    data: timeSeriesData.map(t => t.averagePrice),
                    borderColor: 'rgba(111, 66, 193, 1)',
                    backgroundColor: 'rgba(111, 66, 193, 0.2)',
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                scales: {
                    y: {
                        beginAtZero: false
                    }
                }
            }
        });
    </script>
}

