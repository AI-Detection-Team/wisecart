@model IEnumerable<WiseCart_Web.Models.Product>
@{
    ViewData["Title"] = "Admin Paneli";
    Layout = "_Layout"; 
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-danger fw-bold"><i class="fa-solid fa-lock"></i> Yönetim Paneli</h2>
        <a asp-action="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i> Yeni Ürün Ekle</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>ID</th>
                        <th>Resim</th>
                        <th>Ürün Adı</th>
                        <th>Fiyat</th>
                        <th>Kategori</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>@item.Id</td>
                            <td>
                                <img src="@item.ImageUrl" style="width: 50px; height: 50px; object-fit: contain;">
                            </td>
                            <td class="text-truncate" style="max-width: 200px;">@item.Name</td>
                            <td class="fw-bold text-success">@item.CurrentPrice?.ToString("N0") TL</td>
                            <td><span class="badge bg-secondary">@item.Category?.Name</span></td>
                            <td>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fa-solid fa-trash"></i> Sil
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>