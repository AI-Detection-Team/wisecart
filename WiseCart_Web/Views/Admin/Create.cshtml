@model WiseCart_Web.Models.Product

@{
    ViewData["Title"] = "Yeni Ürün";
}

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0"><i class="fa-solid fa-box"></i> Yeni Ürün Ekle</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create">
                
                <div class="mb-3">
                    <label class="form-label fw-bold">Ürün Adı</label>
                    <input asp-for="Name" class="form-control" required />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Fiyat (TL)</label>
                        <input asp-for="CurrentPrice" type="number" class="form-control" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Model Kodu</label>
                        <input asp-for="Model" class="form-control" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Kategori</label>
                        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Marka</label>
                        <select asp-for="BrandId" class="form-select" asp-items="ViewBag.BrandId"></select>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Resim URL</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="https://..." />
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                    <button type="submit" class="btn btn-success px-5">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>